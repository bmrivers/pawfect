<%- include('./partials/header') %>
<a href="/" class="p-3">Back</a>
<main class="saved-main">
    <div class="card p-2" style="width: 20rem;">
        <img class="card-img-top" src="<%=dogData.media.photos.photo[2].$t%>" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title"><%= dogData.name.$t %></h5>
            <ul class="list-group list-group-flush">
                    <li class="list-group-item"><span class="deets">Age</span>  <%= dogData.age.$t %></li>
                    <li class="list-group-item"><span class="deets">Sex</span>  <%= dogData.sex.$t %></li>
                    <li class="list-group-item"><span class="deets">Breed</span>  <%= dogData.breeds.breed.$t %></li>
                    <li class="list-group-item"><span class="deets">City</span>  <%= dogData.contact.city.$t %></li>
                    <li class="list-group-item"><span class="deets">State</span>  <%= dogData.contact.state.$t %></li>
                    <li class="list-group-item"><span class="deets">Zip</span> <%= dogData.contact.zip.$t %></li>
                    <li class="list-group-item"><span class="deets">Shelter Number </span>  <%= dogData.shelterId.$t %></li>
                </ul>
        </div>

        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong">
                More about <%= dogData.name.$t %>
            </button>
            
            <!-- Modal -->
            <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Meet <%= dogData.name.$t %>.</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
                    <div class="modal-body">
                            <%= dogData.description.$t %>
                    </div>
                    <div class="modal-footer">
                    <button type="button" class="mb-3 btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
                </div>
            </div>
            <a href="<%= dogData.contact.email.$t %>" class="mt-3 card-link">Email</a><br>
        </div>
    </div>
</main>

    <%- include('./partials/footer') %>